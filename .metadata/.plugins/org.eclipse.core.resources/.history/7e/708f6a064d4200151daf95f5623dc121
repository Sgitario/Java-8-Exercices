package com.sgitario.piksel.discovery;

import java.nio.file.Files;
import java.nio.file.Path;
import java.nio.file.Paths;
import java.util.List;
import java.util.stream.Stream;

public class PremieresComparator {
	
	private List<Premiere> parsePremieres(String file) {
		
		try (Stream<Path> stream = Files.list(Paths.get(file))) {
		    String joined = stream
		        .map(String::valueOf)
		        .filter(path -> !path.startsWith("."))
		        .sorted()
		        .collect(Collectors.joining("; "));
		    System.out.println("List: " + joined);
		}
		
		return null;
	}
	
	public static void main(String[] args) {
		PremieresComparator c = new PremieresComparator();
		
		List<Premiere> premieres = c.parsePremieres("report_after.lst");
	}

	

	class Premiere {
		String datamartId;
		String langCode;
		String langDue;
	}
}
